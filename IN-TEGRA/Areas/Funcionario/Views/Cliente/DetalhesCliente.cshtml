@model IN_TEGRA.Models.Cliente

@{
    Layout = "Layout_painel_funcionario";
    ViewData["Title"] = "Detalhes do Cliente";
    var Endereco = ViewBag.Endereco;
    var Pedidos = ViewBag.Pedidos;
}

<h1>Detalhes do Cliente</h1>

<div class="container__produto" style="background: #DADDF5; display: flex; justify-content: center; border-radius: 20px;">
    <div style="background: #5A5F8B; padding: 50px; border-radius: 20px; color: white;">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IdCli)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdCli)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.NomeCliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NomeCliente)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.EmailCliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.EmailCliente)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SenhaCliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SenhaCliente)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CpfCliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CpfCliente)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TelefoneCliente)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TelefoneCliente)
            </dd>
            <hr />
            <h1>Pedidos:</h1>
            @foreach (var item in Pedidos)
            {
                <div style="background: blue;">
                    <h2>Pedido N°: @item.IdPedido</h2>
                    <h3>Data do pedido: @item.DataHoraPedido</h3>
                    <h3>Valor do Pedido: R$@item.ValorPedido </h3>
                    @if (item.ConfirmacaoPedido == false)
                    {
                        <div style="display: flex; gap: 7px;">
                            <h3>Pagamento: </h3><h3 style="color:#FF0004;">Pendente</h3>
                        </div>
                    }
                    else
                    {
                        <div style="display: flex; gap: 7px;">
                            <h3>Pagamento: </h3><h3 style="color:#1BFF06;">Confirmado</h3>
                        </div>
                    }
                    <h3>Frete: R$@item.FretePedido</h3>
                </div>
                <form asp-action="DetalhesItensPedidoCliente" method="get">
                    <input type="hidden" name="IdPedido" value="@item.IdPedido" />
                    <button type="submit" style="border-radius: 30px; background:#FF0054; padding: 20px 40px 20px 40px; outline: none; border: 0px transparent; color: white;">Detalhes</button>
                </form>
            }
        </dl>
        <div>
            <a asp-controller="Cliente" asp-action="Index" style=" background:#FF0054; padding: 10px; outline: none; border: 0px transparent; color: white; border-radius: 20px;">Voltar</a>
        </div>
    </div>
</div>
