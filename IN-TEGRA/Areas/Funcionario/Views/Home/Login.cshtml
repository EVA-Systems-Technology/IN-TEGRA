@model IN_TEGRA.Models.Funcionario

@{
    ViewData["Title"] = "Login";
}

@if(TempData["MSG"] != null)
{
     <script>
        alert("@TempData["MSG"]");
     </script>
}

<main role="main">
    <br />
    <br />
    <section class="container">
        <aside class="col-sm-6">
            <h6 class="subtitle-doc">Login do Colaborador</h6>

            <div id="code_login1">
                <div class="card">
                    <article class="card-body">
                            <p class="alert alert-danger">@Html.Raw(ViewData["MSG"])</p>

                        <h4 class="card-title mb-4 mt-1">Entrar</h4>

                        <form method="post">
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="EmailFuncionario" class="form-control" placeholder="Email" type="email" />
                            </div>

                            <div class="form-group">
                                <a class="float-right" href="#">Esqueceu?</a>
                                <label>Senha</label>
                                <input asp-for="SenhaFuncionario" class="form-control" placeholder="*******" type="password" />
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Acessar</button>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </aside>
    </section>
</main>
