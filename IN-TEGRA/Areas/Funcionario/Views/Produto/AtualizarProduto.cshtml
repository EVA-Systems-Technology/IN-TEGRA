@model IN_TEGRA.Models.Produto

@{
    ViewData["Title"] = "AtualizarProduto";
}

<h1>AtualizarProduto</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarProduto">
