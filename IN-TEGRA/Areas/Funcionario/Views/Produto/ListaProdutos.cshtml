@model IEnumerable<IN_TEGRA.Models.Produto>

@{
    Layout = "Layout_painel_funcionario";
    ViewData["Title"] = "Lista dos Produtos";
}

<body style="font-family:'ABeeZee',sans-serif;">
    <div style="background: white; padding: 50px; margin-top: 50px; border-radius: 20px; margin-bottom: 30px;">
        <div style="display:flex; justify-content: space-between; margin-bottom: 20px;">
            <h1>PRODUTOS</h1>
            <a asp-action="cadastro" style="padding: 10px 20px 10px 20px; border-radius: 20px; text-decoration: none; background: #04128D; font-size: 24px; color: white;">Adicionar produto</a>
        </div>
        <div class="container__produtos" style="display: flex; flex-wrap:wrap; justify-content: left; gap: 39px;">
            @foreach(var item in Model)
            {
                <div class="card mt-2" style="width: 270px; height: 470px;  border-radius: 20px; background: #5A5F8B; padding: 20px;">
                    <img src="@item.ImagemProduto" class="card-img-top" alt="@item.NomeProduto" style="object-fit: fill; height: 250px; width: 100%; border-radius: 20px;">
                    <div class="card-body" style="color: white; border: 0; height: 50px; text-align: left; margin: 0px; padding: 15px 0px 0px 0px; display: flex; flex-direction: column">
                        <h5 class="card-text"><strong>R$ @item.PrecoProduto.ToString("F2")</strong></h5>
                        <h6 class="card-title">@item.NomeProduto</h6>
                        <div class="container__buttons" style="display: flex; flex-direction: column; gap: 10px; margin-top: 20px;">
                            <a asp-controller="produto" asp-action="DetalhesProduto" asp-route-IdProd="@item.IdProd" style="width: 100%; height: 30px; background: #04128D; padding: 10px 20px 10px 20px; color: white; text-align: center; display: flex; justify-content: center; align-items: center; text-decoration: none; border-radius: 20px;">Detalhes</a>
                            <a asp-controller="produto" asp-action="ExcluirProduto" asp-route-IdProd="@item.IdProd" style="width: 100%; height: 30px; background: #FF0054; padding: 10px 20px 10px 20px; color: white; text-align: center; display: flex; justify-content: center; align-items: center; text-decoration: none; border-radius: 20px;">Excluir</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>