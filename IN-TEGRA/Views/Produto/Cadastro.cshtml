@model IN_TEGRA.Models.Produto

<script>
    function Sucesso() {
        alert("Produto cadastrado com sucesso!");
    }
    function Falha() {
        alert("Falha ao cadastrar o produto. Tente novamente.");
    }
</script>

@{
    ViewData["Title"] = "Cadastro";

    if (TempData["Sucesso"] != null)
    {
        <script>Sucesso()</script>
    }
    else if (TempData["Falha"] != null)
    {
        <script>Falha()</script>
        
    }
}


<h1>Cadastro</h1>

<h4>Produto</h4>
<hr />
