@model IN_TEGRA.Models.Produto

@{
    ViewData["Title"] = "Detalhes Produto";
}

<body>
    <div class="container__image" style="width: 100%; max-height: 1200px; display: flex; justify-content: space-around; flex-wrap: wrap">
        <img src="@Model.ImagemProduto" style="max-height: 500px;" />
        <div class="container__informacoes" style="background: #8CA0AC;  padding: 30px; min-width: 280px; height: 100%; border-radius: 30px; color: white; display: flex; flex-direction: column;">
            <h1>@Model.NomeProduto</h1>
            <h2>R$@Model.PrecoProduto,00</h2>
            <h3>Categoria:</h3>
            <label>@Model.CategoriaProduto</label>
            <h4>@Model.QuantidadeProduto</h4>
            

            <form asp-controller="Carrinho" asp-action="AddCarrinho" method="post">
                <input type="hidden" name="produtoId" value="@Model.IdProd" />
                <input type="hidden" name="quantidade" value="1" />
                <button type="submit" class="btn btn-primary">Adicionar ao Carrinho</button>
            </form>
        </div>
    </div>
    <div class="container__descricao" style="background: #8CA0AC; padding: 90px; border-radius: 30px; color: white; width: 100%; height: 30%;">
        <p>@Model.DescricaoProduto</p>
    </div>

    <!--recomendações rever pois a classe é so uma não é IEnumerable-->
</body>