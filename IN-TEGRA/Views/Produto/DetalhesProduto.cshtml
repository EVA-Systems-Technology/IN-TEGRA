@model IN_TEGRA.Models.Produto

@{
    ViewData["Title"] = "Detalhes Produto";
}

<body>
    <div class="container__image" style="width: 100%; max-height: 1200px; display: flex; justify-content: space-around; flex-wrap: wrap">
        <img src="/@Model.ImagemProduto" style="max-height: 400px;" alt="Imagem não Carregada"/>
        <div class="container__informacoes" style="background: #8CA0AC;  padding: 30px; min-width: 280px; height: 100%; border-radius: 20px; color: white; display: flex; flex-direction: column;">
            <h2>@Model.NomeProduto</h2>
            <h3>R$@Model.PrecoProduto,00</h3>
            <h3>Categoria:</h3>
            <label style="padding: 6px; background: grey; width: 100%; text-align: center; border-radius: 20px;">@Model.CategoriaProduto</label>
            <h4>Estoque: @Model.QuantidadeProduto Unidades</h4>
            

            <form asp-controller="Carrinho" asp-action="AddCarrinho" method="post">
                <input type="hidden" name="produtoId" value="@Model.IdProd" />
                <input type="number" id="quantidade-@Model.IdProd" name="quantidade" class="form-control mb-3" value="1" min="1" max="@Model.QuantidadeProduto" />
                <button type="submit" class="btn btn-primary" style="width: 100%; border-radius: 20px;">Comprar</button>
            </form>
        </div>
    </div>
    <div class="container__descricao" style="background: #8CA0AC; padding: 15px 0px 90px 15px; border-radius: 20px; color: white; width: 100%; height: 30%; margin-top: 100px; text-align: left">
        <p>@Model.DescricaoProduto</p>
    </div>

    <!--recomendações rever pois a classe é so uma não é IEnumerable-->
</body>