@{
    Layout = "Layout_painel";
    ViewData["Title"] = "Painel do Cliente";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&display=swap" rel="stylesheet">
</head>


<body style="margin: 0; display: flex; height: 100vh; font-family:'ABeeZee',sans-serif;">

    <div style="flex: 1; display: flex; align-items: center; justify-content: center; padding-top: 10%;">
        <div style="background: #D9D9D9; border-radius: 30px; width: 100%; height: 50%; padding: 50px;">

            <h1>Bem vindo: @ViewBag.nomeCliente!!</h1>

            <div class="Dados" style="padding: 20px; background: #B8B5B5; border-radius: 30px;">
                <h1>Seus Dados:</h1>
                <h2>DATA DE NASCIMENTO: @ViewBag.DataNascimento</h2>
                <h2>EMAIL: @ViewBag.email</h2>
                <h2>TELEFONE: @ViewBag.telefone</h2>
                <h2>CPF: @ViewBag.cpf</h2>
                <h2>SENHA: @ViewBag.Senha</h2>
            </div>

              

        </div>
    </div>
</body>