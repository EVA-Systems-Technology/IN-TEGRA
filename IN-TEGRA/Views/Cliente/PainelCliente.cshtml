@{
    Layout = "Layout_painel";
    ViewData["Title"] = "Painel do Cliente";
}


<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&display=swap" rel="stylesheet">

    <style>

        .campo-dado {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .campo-dado label {
                width: 150px;
                color: white;
                font-size: 14px;
            }

            .campo-dado input {
                flex: 1;
                background: #CFCFCF;
                border: none;
                border-radius: 15px;
                padding: 8px 15px;
                color: #333;
                font-family: 'ABeeZee', sans-serif;
            }

        .valor-box {
            flex: 1;
            background: #CFCFCF;
            border-radius: 15px;
            padding: 8px 15px;
            color: #333;
            font-family: 'ABeeZee', sans-serif;
            font-size: 14px;
            min-height: 38px;
            display: flex;
            align-items: center;
        }

        .btn-alterar {
            background: #FF0054;
            border: none;
            padding: 10px 30px;
            border-radius: 15px;
            cursor: pointer;
            font-weight: bold;
            float: right;
            margin-top: 20px;
            text-decoration: none;
            color: white;
            font-size: 12px;
        }
    </style>
</head>


<body style="margin: 0; display: flex; height: 100vh; font-family:'ABeeZee',sans-serif; background: #EAEAEA;">

    <div style="flex: 1; display: flex; justify-content: center; padding-top: 5%;">
        <div style="background: #D9D9D9; border-radius: 30px; width: 90%; max-width: 800px; height: 80vh; padding: 40px; position: relative;">

            <h1 style="margin-bottom: 30px; font-weight: normal;">Olá, @ViewBag.nomeCliente</h1>

            <div style="background: #535679; border-radius: 20px; padding: 40px; color: white; position: relative;">

                <h2 style="margin-top: 0; margin-bottom: 30px; font-weight: normal; font-size: 20px;">Seus dados</h2>

                <div class="campo-dado">
                    <label>Nome:</label>
                    <div class="valor-box">@ViewBag.nomeCliente</div>
                </div>

                <div class="campo-dado">
                    <label>Email:</label>
                    <div class="valor-box">@ViewBag.email</div>
                </div>

                <div class="campo-dado">
                    <label>Senha:</label>
                    <div class="valor-box">@ViewBag.Senha</div>
                </div>

                <div class="campo-dado">
                    <label>Telefone:</label>
                    <div class="valor-box">@ViewBag.telefone</div>
                </div>

               <div class="campo-dado">
                    <label>CPF:</label>
                    <div class="valor-box">@ViewBag.cpf</div>
                </div>

                <div class="campo-dado">
                    <label>Data de Nascimento:</label>
                    <div class="valor-box">@ViewBag.DataNascimento</div>
                </div>


                <div style="width: 100%; display: flex; justify-content: flex-end; margin-top: 30px;">
                    <a asp-controller="cliente" asp-action="AlterarDados" class="btn-alterar">Alterar dados</a>
                </div>

            </div>

        </div>
    </div>
</body>