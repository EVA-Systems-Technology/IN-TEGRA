@model IN_TEGRA.Models.Cliente

@{
    ViewData["Title"] = "Login";
}
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout_remove";
}

<body style="font-family: 'Alexandria', sans-serif;">
    <div class="d-flex justify-content-between">
        <div class="container_left">
            <img src="~/assets/logo.png" style="max-height: 200px; max-width: 240px;" />
            <form class="p-3" method="post" style="background: #5A5F8B; border-radius: 10px; ">
                <div class="form-group">
                    <label for="Email" style="color: white;" placeholder="Email" type="email">Email</label>
                    <input asp-for="EmailCliente" type="email" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px; color:black;" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="d-flex flex-column mb-2 mt-4">
                    <button type="submit" class="mb-2" style="background: #04128D; color: white; padding: 10px; border: 0px transparent; border-radius: 10px;">Enviar Recuperação</button>
                </div>
            </form>
        </div>
    </div>
</body>
