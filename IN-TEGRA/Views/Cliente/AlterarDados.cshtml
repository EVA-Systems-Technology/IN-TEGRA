@model IN_TEGRA.Models.Cliente

@{
    ViewData["Title"] = "Alterar seus dados";
    Layout = "Layout_painel";
}

<head>
    <style>

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .campo-dado {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .campo-dado label {
                width: 150px;
                color: white;
                font-size: 14px;
            }

            .campo-dado input {
                flex: 1;
                background: #CFCFCF;
                border: none;
                border-radius: 15px;
                padding: 8px 15px;
                color: #333;
                font-family: 'ABeeZee', sans-serif;
            }

        .valor-box {
            flex: 1;
            background: #CFCFCF;
            border-radius: 15px;
            padding: 8px 15px;
            color: #333;
            font-family: 'ABeeZee', sans-serif;
            font-size: 14px;
            min-height: 38px;
            display: flex;
            align-items: center;
        }

        .btn-alterar {
            background: #CFCFCF;
            border: none;
            padding: 10px 30px;
            border-radius: 15px;
            cursor: pointer;
            font-weight: bold;
            float: right;
            margin-top: 20px;
            text-decoration: none;
            color: black;
            font-size: 12px;
        }
    </style>
</head>

<body style="margin: 0; display: flex; height: 100vh; font-family:'ABeeZee',sans-serif; background: #EAEAEA; justify-content: center; align-items: center;">
    <div style="flex: 1; display: flex; justify-content: center; padding-top: 5%;">
        <div style="background: #D9D9D9; border-radius: 30px; width: 90%; max-width: 800px; min-height: 80vh; padding: 40px; position: relative;">
        <h1 style="margin: 10px;">Alterar seus dados:</h1>
           <div style="background: #535679; border-radius: 20px; padding: 40px; color: white; position: relative;">
              <form asp-action="AlterarDados" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <input type="hidden" asp-for="IdCli" />
                  <div class="campo-dado">
                      <label asp-for="NomeCliente" class="control-label"></label>
                      <input asp-for="NomeCliente" class="form-control" />
                      <span asp-validation-for="NomeCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label asp-for="EmailCliente" class="control-label"></label>
                      <input asp-for="EmailCliente" class="form-control" />
                      <span asp-validation-for="EmailCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label asp-for="SenhaCliente" class="control-label"></label>
                      <input asp-for="SenhaCliente" class="form-control" />
                      <span asp-validation-for="SenhaCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label asp-for="CpfCliente" class="control-label"></label>
                      <input asp-for="CpfCliente" class="form-control" />
                      <span asp-validation-for="CpfCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label asp-for="TelefoneCliente" class="control-label"></label>
                      <input asp-for="TelefoneCliente" class="form-control" />
                      <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label asp-for="DataNascimentoCliente" class="control-label"></label>
                      <input asp-for="DataNascimentoCliente" class="form-control" />
                      <span asp-validation-for="DataNascimentoCliente" class="text-danger"></span>
                  </div>
                  <div class="form-group mt-3">
                      <input type="submit" value="Salvar" class="btn btn-primary" />
                  </div>
              </form>
            </div>
         </div>
        </div>
</body>
