@model IN_TEGRA.Models.Cliente

@{
    ViewData["Title"] = "Alterar seus dados";
    Layout = "Layout_painel";
}

<head>
    <style>

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .campo-dado {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .campo-dado label {
                width: 150px;
                color: white;
                font-size: 14px;
            }

            .campo-dado input {
                flex: 1;
                background: white;
                border: none;
                border-radius: 15px;
                padding: 8px 15px;
                color: black;
                font-family: 'ABeeZee', sans-serif;
            }

        .valor-box {
            flex: 1;
            background: white;
            border-radius: 15px;
            padding: 8px 15px;
            color: black;
            font-family: 'ABeeZee', sans-serif;
            font-size: 14px;
            min-height: 38px;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body style="margin: 0; display: flex; height: 100vh; font-family:'ABeeZee',sans-serif;">
    <div style="flex: 1; display: flex; justify-content: center; margin-top: 50px">
        <div style="background: white; border-radius: 30px; width: 90%; max-width: 800px; padding: 40px; position: relative;">
        <h2 style="margin-bottom: 30px;">Alterar seus dados:</h2>
           <div style="background: #535679; border-radius: 20px; padding: 40px; color: white; position: relative;">
                <h2 style="margin-top: 0; margin-bottom: 30px; font-weight: normal;">Seus dados</h2>
              <form asp-action="AlterarDados" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <input type="hidden" asp-for="IdCli" />
                  <div class="campo-dado">
                      <label>Nome:</label>
                      <input asp-for="NomeCliente" class="form-control" />
                      <span asp-validation-for="NomeCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label>Email:</label>
                      <input asp-for="EmailCliente" class="form-control" />
                      <span asp-validation-for="EmailCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label>Senha:</label>
                      <input asp-for="SenhaCliente" class="form-control" />
                      <span asp-validation-for="SenhaCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label>Telefone:</label>
                      <input asp-for="TelefoneCliente" class="form-control" />
                      <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
                  </div>
                   <div class="campo-dado">
                      <label>CPF:</label>
                      <input asp-for="CpfCliente" class="form-control" />
                      <span asp-validation-for="CpfCliente" class="text-danger"></span>
                  </div>
                  <div class="campo-dado">
                      <label>Data de Nascimento:</label>
                      <input asp-for="DataNascimentoCliente" class="form-control" />
                      <span asp-validation-for="DataNascimentoCliente" class="text-danger"></span>
                  </div>
                    <div style="width: 100%; display: flex; justify-content: flex-end; margin-top: 30px;">
                        <input type="submit" value="SALVAR" class="btn btn-primary" style="background: #04128D;border: none;padding: 10px 30px;border-radius: 15px;cursor: pointer;font-weight: bold;float: right;margin-top: 20px;text-decoration: none;color: white;font-size: 12px;" />
                  </div>
              </form>
            </div>
         </div>
        </div>
</body>
