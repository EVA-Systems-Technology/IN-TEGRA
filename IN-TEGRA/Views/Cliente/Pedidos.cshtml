@model List<IN_TEGRA.Models.Pedido>


@{
    ViewData["Title"] = "Pedidos";
    Layout = "Layout_painel";
}
<body style="padding-top: 5%;">
    <div style="display:flex; flex: 1; flex-direction:column; flex-wrap:wrap; gap:20px; background: #D9D9D9; padding: 50px;  border-radius: 30px; ">
        <h1>Pedidos Realizados</h1>
        @foreach (var item in Model)
        {
            <div class="container" style="width: 100%; height: 100%; background: #B5B5B5; padding: 20px; display:flex; justify-content: space-between; border-radius: 30px;">
                <div class="left-content">
                    <h2>Pedido N°: @item.IdPedido</h2>
                    <h3>Data do pedido: @item.DataHoraPedido</h3>
                    <h3>Valor do Pedido: R$@item.ValorPedido,00 </h3>
                    @if (item.ConfirmacaoPedido == false)
                    {
                        <h3 style="color:red;">Pagamento Pendente</h3>
                    }
                    else
                    {
                        <h3 style="color:green;">Pagamento Confirmado</h3>
                    }
                    <h3>Frete: R$@item.FretePedido,00</h3>
                </div>
                <div class="right-content">
                    <form asp-action="DetalhesPedido" method="get">
                        <input type="hidden" name="IdPedido" value="@item.IdPedido" />
                        <button type="submit" style="border-radius: 30px; background:#D9D9D9; padding: 20px 40px 20px 40px; outline: none; border: 0px transparent;">Detalhes</button>
                    </form>
                </div>
            </div>
        }
    </div>

</body>



