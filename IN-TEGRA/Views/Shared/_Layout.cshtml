@inject IHttpContextAccessor HttpContextAccessor

@{
    var logado = false;
    var cliente = HttpContextAccessor.HttpContext.Session.GetString("Login.Cliente");
    if(cliente !=null)
    {
        logado = true;
    }else
    {
        logado = false;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IN_TEGRA</title>
    <script src="js/search.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IN_TEGRA.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
    <style>
        /*Retira o X do input padrão de navegadores edge, firefox e etc*/
        input[type="search"]::-webkit-search-cancel-button {
            display: none;
        }
        input[type="search"]::-moz-search-clear-button {
            display: none;
        }
        input[type="search"]::clear {
            display: none;
        }
        input[type="text"]::-webkit-clear-button {
            display: none;
        }
        /*Deixa o placeholder do pesquisar branco*/
        input::placeholder{
            color:white;
        }

        .search-wrapper {
            position: relative; 
            display: flex;
            align-items: center;
        }

        #listaResultados {
            position: absolute;
            top: 100%; 
            left: 0;
            right: 0;
            z-index: 1000;
            background: white;
            border: 1px solid #ccc;
            max-height: 300px;
            overflow-y: auto;
            display: none; 
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            border-radius: 0 0 8px 8px;
        }

        .item-resultado {
            display: block;
            padding: 10px 15px;
            border-bottom: 1px solid #eee;
            color: #333;
            text-decoration: none;
            cursor: pointer;
            transition: background 0.2s;
        }

        .item-resultado:hover {
            background-color: #f0f0f0;
        }

        .dropdown-menu {
            width: 90px !important;
            min-width: 90px !important;
            padding: 5px !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary" style="font-family:'ABeeZee',sans-serif;">
            <div class="container-fluid d-flex" style="max-height: 100px; padding: 0px 30px 0px 0px">
                <a asp-controller="produto" asp-action="index">
                    <img src="~/assets/logo.png" alt="imagem principal" style="height: 100%; max-height: 100px; width: auto; object-fit: contain;" />
                </a>
                <div class="search-wrapper">
                    <form class="d-flex" role="search" style="align-items:center" onsubmit="return false;">
                        <input type="search" id="campoPesquisa" placeholder="Pesquisar" aria-label="Pesquisar"
                               style="all: unset; background:#2B2B2B; border-radius: 15px; color:white; display: block;width: 100%;padding: .375rem .75rem;font-size: 1rem;font-weight: 400;line-height: 1.5; min-width: 30vw; max-width: 1000px;" />
                        <button type="submit" style="all: unset; outline: none; border: 0px solid transparent; position: relative; left: -40px; width: 35px !important; height: 100%; background: transparent; cursor: pointer;">
                            <img src="~/assets/lupa1.png" style="width: 80%; height:80%;" />
                        </button>
                    </form>
                    <div id="listaResultados"></div>
                </div>
                <div class="d-flex align-items-center" style="gap: 06px;">
                    <a asp-controller="carrinho" asp-action="index" style="text-decoration: none; color: black;  display:flex; align-items:center; gap:6px;">
                        <img src="~/assets/carrinho.png" style="width: 40px; height: 40px;" />
                        <h4>Carrinho</h4>
                    </a>

                    <div class="dropdown">
                        <button type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" style="display: flex; text-align: center; justify-content: center; align-items: center; border: 0px transparent; background: transparent;">
                            <img src="~/assets/perfil.png" style="width: 40px; height: 40px;" />
                            <h4>Perfil</h4>
                        </button>
                        <div class="dropdown-menu">
                            <a asp-controller="cliente" asp-action="@(logado ? "PainelCliente" : "Login")" style="text-decoration: none; color: black;  display:flex; align-items:center; gap:6px;">
                               Cliente
                            </a>
                            <a asp-area="Funcionario" asp-controller="Home" asp-action="Login" style="text-decoration: none; color: black;  display:flex; align-items:center; gap:6px;">
                                Funcionario
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container_custom" style="max-width: 90vw; padding-left: 5vw; padding-right: 5vw; margin: auto;">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>
    <footer style="width: 100%; padding: 50px; background: #374053;  color: white; position: absolute; margin-top: 50px;">
        <div class="" style="border-radius: 15px; padding-left: 30px;">
            <h1><strong>Fale Conosco</strong></h1>
            <h2>evasystems@gmail.com</h2>
            <h2>(11) 3282-2362</h2>
        </div>
        <div class="d-flex justify-content-between" style="padding: 30px 30px 0px 30px;">
            <h3>Todos os direitos reservados Copyright@2025</h3>
            <div class="d-flex" style="max-height: 100px; justify-content: left; gap: 10px;">
                <img src="~/assets/icons/facebook white.png" style="width: 60px; height: 60px;" />
                <img src="~/assets/icons/instagram white.png" style="width: 60px; height: 60px;" />
                <img src="~/assets/icons/whatsapp white.png" style="width: 60px; height: 60px;" />
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/js/cep.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
