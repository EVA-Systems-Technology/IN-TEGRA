<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IN_TEGRA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IN_TEGRA.styles.css" asp-append-version="true" />
    <style>
        /*Retira o X do input padrão de navegadores edge, firefox e etc*/
        input[type="search"]::-webkit-search-cancel-button {
            display: none;
        }
        input[type="search"]::-moz-search-clear-button {
            display: none;
        }
        input[type="search"]::clear {
            display: none;
        }
        input[type="text"]::-webkit-clear-button {
            display: none;
        }
        /*Deixa o placeholder do pesquisar branco*/
        input::placeholder{
            color:white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar bg-body-tertiary">
            <div class="container-fluid d-flex" style="max-height: 100px; padding: 0px 30px 0px 0px">
                <img src="~/assets/logo.png" alt="imagem principal" style="height: 100%; max-height: 100px; width: auto; object-fit: contain;" />
                <form class="d-flex" role="search" style="align-items:center">
                    <input type="search" placeholder="Search" aria-label="Pesquisar" style="all: unset; background:#3D5161; border-radius: 15px; color:white; display: block;width: 100%;padding: .375rem .75rem;font-size: 1rem;font-weight: 400;line-height: 1.5; min-width: 30vw; max-width: 1000px;" />
                    <button style="all: unset; outline: none; border: 0px solid transparent; position: relative; left: -40px; width: 35px !important; height: 100%; background: transparent; cursor: pointer;">
                        <img src="~/assets/lupa1.png" style="width: 100%; height:100%;"/>
                    </button>
                </form>
                <div class="d-flex align-items-center g-2" style="gap: 06px;">
                    <img src="~/assets/carrinho.png" style="width: 40px; height: 40px;" />
                    <h4>Carrinho</h4>
                    <img src="~/assets/perfil.png" style="width: 40px; height: 40px;" />
                    <h4>Perfil</h4>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer style="position: absolute; bottom: 30px; left: 50px;">
        <h3>Todos os direitos reservados Copyright@2025</h3>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
