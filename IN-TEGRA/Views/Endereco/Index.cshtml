@model IN_TEGRA.Models.Endereco

@{
    ViewData["Title"] = "Endereço";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&display=swap" rel="stylesheet">
</head>

<h3 style="font-family: 'Alexandria', sans-serif; margin-bottom: 30px;">Endereço</h3>
<div class="row mb-5">
    <div class="container-fluid" style="font-family:'ABeeZee',sans-serif;">
        <form asp-action="Index" id="form_endereco" method="post" style="background: #5A5F8B; color: white; padding: 30px; border-radius: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" id="cep" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black; "/>
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" id="estado" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" id="cidade" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Bairro" class="control-label"></label>
                    <input asp-for="Bairro" id="bairro" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-12">
                    <label asp-for="Logradouro" class="control-label"></label>
                    <input asp-for="Logradouro" id="logradouro" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4">
                <div class="form-group  col-md-6">
                    <label asp-for="Complemento" class="control-label"></label>
                    <input asp-for="Complemento" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Complemento" class="text-danger"></span>
                </div>
                <div class="form-group  col-md-6">
                    <label class="control-label">Número</label>
                    <input asp-for="Numero" class="form-control" style="background: white; border-radius: 0px 10px 10px 10px;  color:black;  />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
            </div>
        </form>
        <button type="submit" form="form_endereco" class="btn btn-success mt-3" style="padding: 20px 40px 20px 40px; background: #04128D; border-radius: 15px; color: white; border: 0px transparent; font-family: 'Alexandria', sans-serif; margin-right: 20px;">FINALIZAR COMPRA</button>
        <a class="btn btn-success mt-3" style="padding: 20px 40px 20px 40px; background: #FF0054; border-radius: 15px; color: white; border: 0px transparent; font-family: 'Alexandria', sans-serif;" asp-action="index" asp-controller="carrinho">CANCELAR</a>
    </div>
</div>


@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
